			<h1>Data Entry Page</h1>
            <h2>Patient: {{patient.firstname}} {{patient.lastname}}</h2>
            <h3><a href="/patient/homepage">Go back to homepage</a></h3>
            <div class="flex-container" style="flex", align-items="center" justify-content="center">
                        {{#if patientsettings.requires_glucose}}
                        <div class="row" width="auto" border="1px solid blue">
                        <div class="flex-item">
                        <div class="flex-item">
                            <tr><td >glucose</td></tr>
                            {{#if entry.glucose}}
                                <form method="post" action="/patient/dataentry/update">
                                    <p style="color:black"> 
                                        Blood Glucose: 
                                        {{entry.glucose.value}} nmo/L
                                    </p>
                                    {{#if entry.glucose.comment}}
                                        <pre style="background-color:white">{{entry.glucose.comment}}</pre>
                                    {{else}}
                                        <pre style="background-color:white">
                                            
                                        </pre>
                                    {{/if}}
                                    {{!-- <input id="data-field" type="number" name="data_value"> --}}
                                    <input id="data-field" type="hidden" name="user_id" value={{patient._id}}>
                                    <input id="data-field" type="hidden" name="health_type" value={{entrytypes.glucose}}>
                                    <input type="Submit" value="Update Data">
                                </form>
                            {{else}}
                                <form method="post" action="/patient/dataentry/add">
                                    <p style="color:black"> 
                                        Blood Glucose: 
                                        No data
                                    </p>
                                    {{#if entry.glucose.comment}}
                                        <pre style="background-color:white">
                                            {{entry.glucose.comment}}
                                        </pre>
                                    {{else}}
                                        <pre style="background-color:white">

                                        </pre>
                                    {{/if}}
                                    {{!-- <input id="data-field" type="number" name="data_value"> --}}
                                    <input id="data-field" type="hidden" name="user_id" value={{patient._id}}>
                                    <input id="data-field" type="hidden" name="health_type" value={{entrytypes.glucose}}>
                                    <input type="Submit" value="Add Data">
                                </form>
                            {{/if}}
                        </div>                        
                        </div>  
                        </div>
                        {{/if}}


