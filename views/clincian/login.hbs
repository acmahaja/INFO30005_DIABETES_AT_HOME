
    <title>Login</title>
    <link rel="stylesheet" href="../css/style.css" />
    <link rel="stylesheet" href="../css/background.css" />
    <link rel="stylesheet" href="../css/navbar.css" />
    <link rel="stylesheet" href="../css/login.css" />
    <link rel="icon" type="image/x-icon" href="../images/favicon.png" />
</head>


<body>
    <div class="blur blur-1"></div>

    <div class="wrapper">
        <div class="navbar">
            <div class="logo">
                <img src="../images/icon.svg" alt="" />
            </div>
            <div class="links">
                <ul>
                    <li><a href="/">About</a></li>
                    <li><a href="/diabetes">Diabetes</a></li>
                    <li><a class="selected" href="#">Login</a></li>
                </ul>
                <ul class="login-links" ogin-links>
                    <li><a class="selected" href="/clinician/login">Clinician</a></li>
                    <li><a href="/patient/login">Patient</a></li>
                </ul>
            </div>
            <div class="hamburger-menu">
                <img src="../images/login/hamburger_menu.svg" alt="" />
            </div>
        </div>

        <img class="login-image" src="../images/login/clinician_login_background.svg" alt="" style="max-width:100%;height:auto;" />
        <form action="/clinician/login" method="post" class="login-box" id="clinician-login-box">
            <div class="input-area">
                <div class="input">
                    <label class="text">Username</label>
                    <input class="input-box" type="text" id="username" name="username">
                </div>
                <div class="input">
                    <label class="text">Password</label>
                    <input class="input-box" type="password" id="password" name="password">
                </div>
            </div>
            <button class="login-button">Login</button>
        </form>
    </div>
</body>

</html>