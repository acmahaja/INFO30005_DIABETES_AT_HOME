<title>Patient Messages</title>
<link rel='stylesheet' href='/css/clinican_sidebar.css' />
<link rel="stylesheet" href="/css/clinican_patient_messages.css" />
<link rel="stylesheet" href="/css/clinican_dashboard.css" />


<body>
  {{> sidebarClinician this }}
  <main>
    <header>
      <a href="/clinician/dashboard">
        <div class="return">
          <img src="/icons/back-icon.svg" alt=""> Back
        </div>
      </a>
      <h1>Patient Messages</h1>
      <div class="day"> <div id="week_day"></div> <div id="date"></div> </div>
    </header>

    <section class="content">
      <div class="nav patient-options">
        <div class="tabs">
          <div class="tab"><a href="/clinician/{{patient._id}}/data">Data</a></div>
          <div class="tab selected"><a href="/clinician/{{patient._id}}/messages">Messages</a></div>
          <div class="tab"><a href="/clinician/{{patient._id}}/notes">Notes</a></div>
          <div class="tab"><a href="/clinician/{{patient._id}}/info">Info</a></div>
        </div>
        <div class="content">
          <div class="notes" >
            <div class="header">
                <h3>Message Date:</h3>
                <a href="/clinician/{{patient._id}}/messages/new"><img src="/icons/add_button.svg" alt=""></a>
            </div>
            {{#each all_messages as |messages|}}
              <div class="note">
                <a href="/clinician/{{../patient._id}}/messages/{{messages._id}}">
                  {{formatDateTime messages.created}}

                </a>
              </div>
            {{/each }}

          </div>
          <div class="patient-notes"></div>
        </div>
      </div>
    </section>



<script>
  const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
  const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
  const date =  new Date();
  const week_day = days[date.getDay()];
  const day = date.getDate();
  const month = months[date.getMonth()];
  const year = date.getFullYear();

  document.getElementById("week_day").innerHTML = week_day + ",";
  document.getElementById("date").innerHTML = day + " " + month + " " + year;

  document.getElementsByClassName("name")

</script>




